    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/web2/js/move-top.js"></script>
    <script type="text/javascript" src="~/web2/js/easing.js"></script>
</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">

        </div>
    </div>
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    @foreach (var x in Model.Blog1)
                    {
                        <img src="@x.BlogImg" alt="" style="margin-bottom:20px" />
                        <h2>@x.Basliq</h2>
                        <p>@x.Aciqlama</p>
                    }
                </div>
                @foreach (var coment in Model.Comment1)
                {
                     <ul class="comment-list">
                    <li>
                        <img src="~/web2/images/avatar.png" class="img-responsive" alt="">
                        <div class="desc">
                            <p>@coment.IstifadeciAd: @coment.CommentString </p>
                        </div>
                        <div class="clearfix"></div>
                    </li>
                </ul>
                }
               
                @Html.Action("ReyYaz","Blog")
            </div>

            
            <div class="clearfix"></div>
        </div>
    </div>
</body>
